#!/usr/bin/env bash
#set -x
# Default parameters
singleline=1
out=0
inplace=0
stdin=0
threads=1
name_sort=0
reverse_sort=0
length_sort=0
lettercase=0
complement=0
rev_seq=0
orf=0
frame=1
translate=0
min_prot=0
translate_table=1
percent_GC=0
verbose=0
help=0
time_start=$(date +%s)

function print_usage(){
 printf "
fastakit [OPTIONS] FASTA_file.fasta
	-o | --out	Output to file (otherwise to stdout)
	-i | --in-place	Modify file in-place
	-n | --name_sort	Sort FASTA by name
	-s | --length_sort	Sort FASTA by sequence length (shortest to longest)
	-r | --reverse_sort	Sort in reverse order
	-u | --upper	Sequences to uppercase
	-l | --lower	Sequences to lowercase
	-c | --complement	Complementary sequence
	-m | --reverse_seq	Reverse sequence
	-g | --orf	Sequence from first ATG in frame (Default = frame 1)
	-p | --translate	Protein sequences in current frame (Default = frame 1)
	-a | --table	Translation code (Default = standard code)
	-f | --frame	Frame to extract codons (must be 1, 2 or 3)
	-e | --min_prot #	Minimum protein size (Assumes --translate)
	-t | --threads #	Number of CPU threads to use (Default = 1)
	-d | --gc	Get percent GC per sequence (Disables --translate)
	-v | --verbose	Verbose
	-h | --help	Display help
	--skip_singleline	Skip changing multi-line FASTA to single-line FASTA 
	--available_codes	Show available translation codes

"
}

# Alternative tables
function tables(){
printf "
	Available translation codes:
	1 - Standard code
	2 - Vertebrate Mitochondrial code
	3 - Yeast mitochondrial code
	4 - Mold, protozoan, and coelenterate mitochondrial code and the mycoplasma/spiroplasma code

"
}

# Check arguments
for arg in "$@"
do
 case $arg in
  -o | --out)
  out=1 # Output to file
  shift
  output_file=$1
  shift
  ;;
  -i | --in-place)
  inplace=1 # Modify file in-place
  shift
  ;;
  -n | --name_sort)
  name_sort=1 # Sort FASTA file by name
  shift
  ;;
  -s | --length_sort)
  length_sort=1 # Sort FASTA file by sequence length
  shift
  ;;
  -r | --reverse_sort)
  reverse_sort=1 # Sort in reverse order
  shift
  ;;
  -u | --upper)
  lettercase=1 # Sequences to uppercase
  shift
  ;;
  -l | --lower)
  lettercase=2 # Sequences to lowercase
  shift
  ;;
  -c | --complement)
  complement=1 # Complementary sequences
  shift
  ;;
  -m | --reverse_seq)
  rev_seq=1 # Reverse sequences
  shift
  ;;
  -f | --frame)
  shift # Set frame for codons
  frame=$1
  shift
  ;;
  -g | --orf)
  orf=1 # Sequence from first ATG in frame
  shift
  ;;
  -p | --translate)
  translate=1 # Translate sequences
  shift
  ;;
  -d | --gc)
  percent_GC=1 # Get percent GC per sequence
  shift
  ;;
  -a | --table)
  shift
  translate_table=$1 # Alternative translation table
  shift
  ;;
  --skip_singleline)
  singleline=0 # Skip single-line conversion
  shift
  ;;
  --available_codes)
  tables
  exit 0
  ;;
  -e | --min_prot)
  min_prot=1 # Minimum protein size
  translate=1 # Translate sequences
  shift
  min_prot_length=$1
  shift
  ;;
  -t | --threads)
  shift
  threads=$1 # Number of CPU threads
  shift
  ;;
  -v | --verbose)
  verbose=1 # Print file names and arguments
  shift
  ;;
  -h | --help)
  print_usage
  exit 1
  ;;
  *)
  esac
  done
  
  # Time function
  function show_time () {
    num=$1
    min=0
    hour=0
    day=0
    if((num>59));then
        ((sec=num%60))
        ((num=num/60))
        if((num>59));then
            ((min=num%60))
            ((num=num/60))
            if((num>23));then
                ((hour=num%24))
                ((day=num/24))
            else
                ((hour=num))
            fi
        else
            ((min=num))
        fi
    else
        ((sec=num))
    fi
    echo "$day"d "$hour"h "$min"m "$sec"s > /dev/tty
}

  # Translation function
  function translate(){
	while read seq
	do
	echo $seq |
	awk '{print tolower($0)}' | 
	sed --regexp-extended \
        's/atg/M/g;
         s/at[tc]/I/g;
         s/ac[actg]/T/g;
         s/aa[tc]/N/g;
         s/aa[ag]/K/g;
         s/ag[tc]/S/g;
         s/tt[tc]/F/g;
         s/tt[ag]/L/g;
         s/tc[acgt]/S/g;
         s/ta[tc]/Y/g;
         s/ta[ag]/*/g;
         s/tg[tc]/C/g;
         s/tgg/W/g;
         s/cc[acgt]/P/g;
         s/ca[tc]/H/g;
         s/ca[ag]/Q/g;
         s/cg[gt]/R/g;
         s/gt[acgt]/V/g;
         s/gc[acgt]/A/g;
         s/ga[tc]/D/g;
         s/ga[ag]/E/g;
         s/gg[acgt]/G/g' |
         
         # Standard code
         if [[ $translate_table = 1 ]]
         then
          sed --regexp-extended \
           's/ata/I/g;
            s/ag[ag]/R/g;
            s/ct[acgt]/L/g;
            s/cg[ac]/R/g;
            s/tga/*/g;'
       
         # Vertebrate mitochondrial code
         elif [[ $translate_table = 2 ]]
         then
          sed --regexp-extended \
           's/ata/M/g;
            s/ag[ag]/*/g;
            s/ct[acgt]/L/g;
            s/cg[ac]/R/g;
            s/tga/W/g;'
       
         # Yeast mitochondrial code
         elif [[ $translate_table = 3 ]]
          then
          sed --regexp-extended \
           's/ata/M/g;
            s/ag[ag]/R/g;
            s/ct[acgt]/T/g;
            s/cg[ac]/X/g;
            s/tga/W/g;'
       
         # Mold, protozoan, and coelenterate mitochondrial code and the mycoplasma/spiroplasma code
         elif [[ $translate_table = 4 ]]
          then
           sed --regexp-extended \
            's/ata/I/g;
             s/ag[ag]/R/g;
             s/ct[acgt]/L/g;
             s/cg[ac]/R/g;
             s/tga/M/g;'
          else
           echo "Error: Unknown translation code"
           tables
           exit 1
         fi
     done
}
  
  # Frame exception
  if [[ $frame < 1 || $frame > 3 ]]
  then
   echo "Frame value must be 1, 2 or 3"
   print_usage
   exit 1
  fi
  
  # Disable translate
  if [[ $percent_GC = 1 ]]
  then
   translate=0
  fi
  
    # Create temp files
    if [ $# -ge 1 -a -f "$1" ]
    then
    FILE=$1
    else
    inplace=0
    stdin=1
    FILE=$(mktemp)
    cat /dev/stdin > $FILE
    fi
    HEADERS=$(mktemp)
    INFILE=$(mktemp)
    OUTFILE=$(mktemp)
    
    if [[ $verbose = 1 ]]; then echo -en "Using "$threads" thread(s)...\n\n" > /dev/tty; fi

    # Create single line FASTA and change to specified case
    if [[ $verbose = 1 ]]; then
    if [[ $singleline = 1 ]]; then
    if [[ $lettercase = 0 ]]; then echo "Converting to single line FASTA..." > /dev/tty
     elif [[ $lettercase = 1 ]]; then echo "Converting to upper-case single line FASTA..." > /dev/tty
     elif [[ $lettercase = 2 ]]; then echo "Converting to lower-case single line FASTA..." > /dev/tty
    fi
    else
     echo "Skipping single line FASTA conversion..." > /dev/tty
    fi
    fi
    
    grep --perl-regexp "^>" $FILE > $HEADERS &
    if [[ $singleline = 1 ]]
    then
    if [[ $lettercase = 0 ]]
    then
     #perl -pe '$. > 1 and /^>/ ? print "\n" : chomp' $FILE | grep --perl-regexp --invert-match "^>" 
     sed --regexp-extended 's/\r//g' $FILE | awk '/^>/ {printf((N>0?"\n":""));N++;next;} {printf("%s",$0);}  END {printf("\n");}' > $OUTFILE
    
    # Convert to upper-case
    elif [[ $lettercase = 1 ]]
     then
      sed --regexp-extended 's/\r//g' $FILE | awk '/^>/ {printf((N>0?"\n":""));N++;next;} {printf("%s",toupper($0));}  END {printf("\n");}' > $OUTFILE

    # Convert to lower-case
     elif [[ $lettercase = 2 ]]
      then
       sed --regexp-extended 's/\r//g' $FILE | awk '/^>/ {printf((N>0?"\n":""));N++;next;} {printf("%s",tolower($0));}  END {printf("\n");}' > $OUTFILE
    fi
    else
     parallel -a $FILE -k -j"$threads" --block 30M --pipe-part 'grep --perl-regexp --invert-match "^>"' > $OUTFILE
     # grep --perl-regexp --invert-match "^>" $FILE > $OUTFILE
    fi
     if [[ $verbose = 1 ]]; then echo -n "Single line conversion done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty; fi
     
     # Get complementary sequences

     if [[ $complement = 1 ]]
     then
      if [[ $verbose = 1 ]]; then echo "Converting to complement sequence..." > /dev/tty; fi
      SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH
      parallel -a $INFILE -k -j"$threads" --block 30M --pipe-part 'tr \"ATCGatcg\" \"TAGCtagc\"' > $OUTFILE
      if [[ $verbose = 1 ]]; then echo -n "Complement conversion done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty; fi
     fi
     
     # Get reverse sequences     
     if [[ $rev_seq = 1 ]]
     then
      if [[ $verbose = 1 ]]; then echo "Converting to reverse sequence..." > /dev/tty; fi
      SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH
      parallel -a $INFILE -k -j"$threads" --block 30M --pipe-part 'rev' > $OUTFILE
      if [[ $verbose = 1 ]]; then echo -n "Reverse conversion done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty; fi
     fi
     
     # Change frame
     if [[ $frame != 1 ]]
     then
      sed --in-place --regexp-extended 's/^.{'"$(($frame - 1))"'}//g' $OUTFILE
     fi

     if [[ $orf = 1 ]]
     then
     if [[ $verbose = 1 && $orf = 1 ]]; then echo "ORF | frame "$frame > /dev/tty; fi
     if [[ $verbose = 1 && $translate = 1 ]]; then echo "Translate | frame "$frame > /dev/tty; fi
     if [[ $verbose = 1 && $translate_table != 1 ]]; then echo "Translation code: "$translate_table > /dev/tty; fi
     if [[ $verbose = 1 && $min_prot = 1 ]]; then echo "Minimum protein length: "$min_prot_length > /dev/tty; fi
     SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH
     function get_orfs(){
     
     local SWITCH
     local ORFstart=$1
     local ORFend=$2
     local orf_core=$3
     local ORFFILE2=$(mktemp)
     local ORFFILE3=$(mktemp)
     local ORFHEADERS2=$(mktemp)
     
     if [[ $threads != 1 ]]
     then
      local ORFFILE1=$(mktemp)
      local ORFHEADERS=$(mktemp)
      sed --quiet ''"$ORFstart"','"$ORFend"'p;'"$(($ORFend + 1))"'q' $INFILE > $ORFFILE1
      sed --quiet ''"$ORFstart"','"$ORFend"'p;'"$(($ORFend + 1))"'q' $HEADERS > $ORFHEADERS
     else
      local ORFFILE1=$INFILE
      local ORFHEADERS=$HEADERS
     fi
     
      # Separate codons and cut to first start and stop codon
      local orf_num=1
      #if [[ $(($orf_num % 5)) = 0 ]]
      # then
      #  local core_arr=($(cat $core_ORF))
      #  core_arr[$orf_core]="(core:"$orf_core")="$orf_num
      #  echo ${core_arr[@]} > $core_ORF
      #  echo -ne "Extracting ORF "$(cat $core_ORF)"\r"
      #fi
      awk -F '' '{for(i=1; i<=NF; i+=3) {printf "%s%s ", $i,$(i+1)$(i+2);}; print ""}' $ORFFILE1 |
      awk -F $'\t' '{if(match(tolower($0),"atg") > 0) print substr($0,match(tolower($0),"atg"));
      if(match(tolower($0),"atg") == 0) print ""}' |
      tee $ORFFILE3 |
      awk -F $'\t' '{if(match(tolower($0),"ta[ag]|tga") > 0) print substr($0,1,match(tolower($0),"ta[ag]|tga")+2);
      if(match(tolower($0),"ta[ag]|tga") == 0) print $0}' |
      if [[ $translate = 1 ]]
      then
       translate |
       sed --regexp-extended 's/[atcg]{1,}$//g' |
       tr -d " " |
       if [[ $min_prot = 1 ]]
       then
        awk -v min_prot_length="$min_prot_length" '{if(match($0,"*|$") - 1 >= min_prot_length) print $0;
        if(match($0,"*|$") - 1 < min_prot_length) print ""}'
       else
        cat
       fi
      else
       tr -d " "
      fi > $ORFFILE2
      awk -F $'\t' -v orf_num="$orf_num" '{print $0"_orf"orf_num}' $ORFHEADERS > $ORFHEADERS2
      SWITCH=$ORFFILE1; ORFFILE1=$ORFFILE3; ORFFILE3=$SWITCH

      # Loop over other ORFs
      while [[ $(grep --ignore-case --count "atg" $ORFFILE1) != 0 ]]
      do
      
       orf_num=$(($orf_num + 1))
       
       #if [[ $(($orf_num % 5)) = 0 ]]
       #then
       # local core_arr=($(cat $core_ORF))
       # core_arr[$orf_core]="(core:"$orf_core")="$orf_num
       # echo ${core_arr[@]} > $core_ORF
       # echo -ne "Extracting ORF "$(cat $core_ORF)"\r"
      #fi
       : > $ORFFILE3
       
       # Cut until first start and stop codon or until end of line
       awk -F $'\t' '{if(match(tolower($0),"ta[ag]|tga") > 0) print substr($0,match(tolower($0),"ta[ag]|tga")+4);
       if(match(tolower($0),"ta[ag]|tga") == 0) print ""}' $ORFFILE1 |
       awk -F $'\t' '{if(match(tolower($0),"atg") > 0) print substr($0,match(tolower($0),"atg"));
       if(match(tolower($0),"atg") == 0) print ""}' |
       tee $ORFFILE3 |
       awk -F $'\t' '{if(match(tolower($0),"ta[ag]|tga") > 0) print substr($0,1,match(tolower($0),"ta[ag]|tga")+2);
       if(match(tolower($0),"ta[ag]|tga") == 0) print ""}' |
       if [[ $translate = 1 ]]
       then
        translate |
        sed --regexp-extended 's/[atcg]{1,}$//g' |
        tr -d " " |
        if [[ $min_prot = 1 ]]
        then
         awk -v min_prot_length="$min_prot_length" '{if(match($0,"*|$") - 1 >= min_prot_length) print $0;
         if(match($0,"*|$") - 1 < min_prot_length) print ""}'
        else
         cat
        fi
       else
        tr -d " "
       fi >> $ORFFILE2
       awk -F $'\t' -v orf_num="$orf_num" '{print $0"_orf"orf_num}' $ORFHEADERS >> $ORFHEADERS2
       SWITCH=$ORFFILE1; ORFFILE1=$ORFFILE3; ORFFILE3=$SWITCH
       
      done
      
      cat $ORFHEADERS2 >> $HEADERS_TMP
      cat $ORFFILE2 >> $OUTFILE
      
      # Cleanup
      if [[ $threads != 1 ]]
      then
      rm --force $ORFFILE1 $ORFHEADERS
      fi
      
      rm --force $ORFFILE2 $ORFFILE3 $ORFHEADERS2
     }
     
     # Allocate sequences to requested threads
     seq_num=$(grep --count ">" $HEADERS)
     if [[ $seq_num -lt $threads ]]
     then
      threads=$seq_num
     fi
     
     # Setup start and end lines for dividing sequences
     BATCH=$(( seq_num / $threads ))
     remainder=$(( seq_num % $threads ))
     
     start=1
     end=()
     for ((core=0;core <= $(($threads - 1));core++))
     do
      if [[ ${#end[@]} != 0 ]]
      then
       start=(${start[@]} $((${end[$(($core - 1))]} + 1)))
      fi
      if [[ $core -lt $remainder ]]
      then
       end=(${end[@]} $((${start[$core]} + $BATCH)))
      else
       end=(${end[@]} $((${start[$core]} + $BATCH - 1)))
      fi
     done
     
     # Loop for function getting ORFs for multithreading
     core_ORF=$(mktemp)
     HEADERS_TMP=$(mktemp)
     : > $OUTFILE
     for ((core=0;core <= $(($threads - 1));core++))
     do
      get_orfs ${start[$core]} ${end[$core]} $core &
      pids[$core]=$!
     done
     
     for pid in ${pids[*]}
     do
      wait $pid
     done
     rm --force $HEADERS $core_ORF
     HEADERS=$HEADERS_TMP
     if [[ $verbose = 1 && $translate = 0 ]]
     then
      echo -n "ORF detection done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty
     fi
     if [[ $verbose = 1 && $translate = 1 ]]
     then
      echo -n "ORF detection and translation done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty
     fi
    fi
    
    # Separate to codons and translate
    
    if [[ $translate = 1 && $orf = 0 ]]
    then
     SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH
     if [[ $verbose = 1 ]]; then echo "Translate | frame "$frame > /dev/tty; fi
     if [[ $verbose = 1 && $translate_table != 1 ]]; then echo "Translation code: "$translate_table > /dev/tty; fi
     if [[ $verbose = 1 && $min_prot = 1 ]]; then echo "Minimum protein length: "$min_prot_length > /dev/tty; fi
     awk -F '' '{for(i=1; i<=NF; i+=3) {printf "%s%s ", $i,$(i+1)$(i+2);}; print ""}' $INFILE |
      translate |
       sed --regexp-extended 's/[atcg]{1,}$//g' |
       tr -d " " |
       
       # remove if less than cutoff
       if [[ $min_prot = 1 ]]
       then
        awk -v min_prot_length="$min_prot_length" '{if(match($0,"*|$") - 1 >= min_prot_length) print $0;
        if(match($0,"*|$") - 1 < min_prot_length) print ""}'
       else
        cat
       fi > $OUTFILE
       if [[ $verbose = 1 ]]; then echo -n "Translation done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty; fi
    fi
    
     # GC content
     if [[ $verbose = 1 && $percent_GC = 1 ]]; then echo "Percent GC" > /dev/tty; fi
     
     if [[ $percent_GC = 1 ]]
     then
     SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH
      awk '{var=length($0);gsub("[AaTt]","",$0);print length($0)/var*100}' $INFILE
      if [[ $verbose = 1 ]]; then echo -n "GC fraction done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty; fi
      exit 0
     fi
     
     SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH
     paste $HEADERS $INFILE | grep --perl-regexp --invert-match "\t$" > $OUTFILE

     # Sort by name
     if [[ $verbose = 1 && $name_sort = 1 ]]; then echo "Sort by name" > /dev/tty; fi
     if [[ $verbose = 1 && $reverse_sort = 1 ]]; then echo "Sort in reverse order" > /dev/tty; fi
     
     if [[ $name_sort = 1 ]]
     then
     SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH
      if [[ $reverse_sort = 1 ]]
      then
       sort --reverse --field-separator=$'\t' --key=1 $INFILE > $OUTFILE
      else
       sort --field-separator=$'\t' --key=1 $INFILE > $OUTFILE
      fi
      if [[ $verbose = 1 ]]; then echo -n "Name sort done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty; fi
     fi
    
    # Sort by sequence length
     if [[ $verbose = 1 && $length_sort = 1 ]]; then echo "Sort by length" > /dev/tty; fi
     if [[ $verbose = 1 && $reverse_sort = 1 ]]; then echo "Sort in reverse order" > /dev/tty; fi
     if [[ $length_sort = 1 ]]
     then
     SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH    
      awk '{print length, $0}' $INFILE |
      if [[ $reverse_sort = 1 ]]
      then
       sort --numeric-sort --reverse
      else
       sort --numeric-sort
      fi |
      cut --delimiter=" " --fields=2- > $OUTFILE
      if [[ $verbose = 1 ]]; then echo -n "Length sort done: " > /dev/tty; show_time $(($(date +%s) -time_start)); echo "" > /dev/tty; fi
     fi
     
     # Convert tabbed to FASTA and remove empty headers
     SWITCH=$OUTFILE; OUTFILE=$INFILE; INFILE=$SWITCH
     cat $INFILE |
     tr "\t" "\n" > $OUTFILE
     
    # Output to file or stdout
    if [[ $out = 1 ]]
    then
     if [[ $verbose = 1 ]]; then echo $(basename $1)" ---> "$output_file > /dev/tty; fi
     cp --force $OUTFILE $output_file
    else
     if [[ $inplace = 1 ]]
     then
      cp --force $OUTFILE $FILE
     else
      cat $OUTFILE
     fi
    fi
    
    rm --force $INFILE $OUTFILE
    if [[ $stdin = 1 ]]
    then
     rm --force $FILE
    fi
    
    if [[ $verbose = 1 ]]; then echo "fastakit done:" > /dev/tty; show_time $(($(date +%s) -time_start)) > /dev/tty; fi
